<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    >

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="#f6f6f6"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_width="@dimen/me_head_size"
            android:layout_height="@dimen/me_head_size"
            android:src="@drawable/man"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head"
            android:layout_marginLeft="16dp"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_40"
            android:text="少爷"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_layout"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/weekplant"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/me"
            android:paddingLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="#f6f6f6"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/plan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="周计划"
                android:textColor="@color/black_40"
                android:textSize="16sp"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_grey"/>
        <LinearLayout
            android:id="@+id/pictures"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/weekplant"
            android:paddingLeft="16dp"
            android:background="#f6f6f6"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pictures"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="相册"
                android:textSize="16sp"
                android:textColor="@color/black_40"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_grey"/>
        <LinearLayout
            android:id="@+id/collect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/pictures"
            android:paddingLeft="16dp"
            android:background="#f6f6f6"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/collections"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="收藏"
                android:textSize="16sp"
                android:textColor="@color/black_40"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/main"
        android:background="#f6f6f6"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/setting"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="设置"
            android:textSize="16dp"
            android:textColor="@color/black_40"
            />

    </LinearLayout>



</RelativeLayout>
