<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lessask.lesson.CreateLessonActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00bb9c"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="@dimen/toolbar_padding_top"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="定制课程"
            />
        <ImageView
            android:id="@+id/save"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/done"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="13dp"
                android:text="名字"
                />
            <EditText
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_label"
                android:layout_alignBottom="@id/name_label"
                android:layout_marginLeft="5dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_layout"
            >
            <TextView
                android:id="@+id/tag_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="13dp"
                android:text="标签"
                />
            <LinearLayout
                android:id="@+id/select_tag_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tag_label"
                android:layout_marginLeft="5dp"
                >
                <me.kaede.tagview.TagView
                        android:id="@+id/selected_tags"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        app:lineMargin="5dp"
                        app:tagMargin="3dp"
                        app:textPaddingBottom="3dp"
                        app:textPaddingLeft="10dp"
                        app:textPaddingRight="10dp"
                        app:textPaddingTop="3dp"
                        />
                <ImageView
                    android:id="@+id/edit_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tag"
                    />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tag_layout"
            >
            <TextView
                android:id="@+id/fat_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="13dp"
                android:text="减脂"
                />
            <com.hedgehog.ratingbar.RatingBar
                android:id="@+id/fat_start"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/fat_label"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:rating="1"
                android:isIndicator="false"
                hedgehog:starCount="5"
                hedgehog:clickable="true"
                hedgehog:starEmpty="@drawable/unstar"
                hedgehog:starFill="@drawable/star"
                hedgehog:starImageSize="25dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/muscle_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fat_layout"
            android:layout_below="@id/tag_layout"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/muscle_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="13dp"
                android:text="增肌"
                />
            <com.hedgehog.ratingbar.RatingBar
                android:id="@+id/muscle_start"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/muscle_label"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:rating="1"
                android:isIndicator="false"
                hedgehog:starCount="5"
                hedgehog:clickable="true"
                hedgehog:starEmpty="@drawable/unstar"
                hedgehog:starFill="@drawable/star"
                hedgehog:starImageSize="25dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cost_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fat_layout"
            >
            <TextView
                android:id="@+id/cost_time_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="13dp"
                android:text="耗时"
                />
            <TextView
                android:id="@+id/cost_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cost_time_label"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="20 分钟"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cost_time_layout"
            android:layout_below="@id/fat_layout"
            >
            <TextView
                android:id="@+id/address_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="13dp"
                android:text="场所"
                />
            <Spinner
                android:id="@+id/address"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/address_label"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:entries="@array/sport_address_array"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cycle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/address_layout"
            android:layout_below="@id/fat_layout"
            >
            <TextView
                android:id="@+id/cycle_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="13dp"
                android:text="循环"
                />
            <Spinner
                android:id="@+id/cycle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cycle_label"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:entries="@array/cycle_time_array"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cycle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="次"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_layout"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>
