<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/head_default"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/head_img"
        android:layout_toRightOf="@id/head_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="唐三炮少爷"
        android:textColor="#1a1a1a"
        android:textSize="13dp"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/head_img"
        android:layout_marginRight="16dp"
        android:text="36分钟前"
        android:textSize="12dp"
        />
    <RelativeLayout
        android:id="@+id/show_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_img"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="8dp"
        >
    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_image_layout"
        android:layout_alignLeft="@id/head_img"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        android:textColor="#1a1a1a"
        android:text="今天天气真不错！！！"
        />

    <RelativeLayout
        android:id="@+id/tail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:paddingLeft="4dp"
        >
        <ImageView
            android:id="@+id/up"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/up"
            />
        <TextView
            android:id="@+id/up_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/up"
            android:textSize="14dp"
            android:text="138"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/comment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_toRightOf="@id/up_size"
            android:layout_alignTop="@id/up"
            android:layout_marginLeft="10dp"
            android:src="@drawable/comment"/>
        <TextView
            android:id="@+id/comment_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/comment"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            android:text="78"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:text="深圳市 南山区 塘朗山"
            />

    </RelativeLayout>


</RelativeLayout>