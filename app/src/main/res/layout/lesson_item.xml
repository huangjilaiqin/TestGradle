<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="30天无敌减脂"
        />
    <Button
        android:id="@+id/edit"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/name"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_border_main_color"
        android:textSize="15sp"
        android:text="编辑"
        />
    <Button
        android:id="@+id/distribute"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_below="@id/edit"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/edit"
        android:background="@drawable/button_border_main_color"
        android:textSize="15sp"
        android:text="分配"
        />
    <ImageView
        android:id="@+id/time_label"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/time_grey"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        />
    <me.kaede.tagview.TagView
        android:id="@+id/tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_label"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        app:lineMargin="5dp"
        app:tagMargin="3dp"
        app:textPaddingBottom="3dp"
        app:textPaddingLeft="10dp"
        app:textPaddingRight="10dp"
        app:textPaddingTop="3dp"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/time_label"
        android:layout_alignBottom="@id/time_label"
        android:layout_marginLeft="5dp"
        android:text="30分钟"
        />
    <ImageView
        android:id="@+id/address_label"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_toRightOf="@id/time"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/time_label"
        android:src="@drawable/address"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/address_label"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@id/time_label"
        android:text="家里"
        />
</RelativeLayout>