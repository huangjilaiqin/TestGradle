<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lessask.action.ActionsActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00bb9c"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="@dimen/toolbar_padding_top"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:text="选择课程"
            />
        <ImageView
            android:id="@+id/done"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/done"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:paddingTop="10dp"
        >

        <EditText
            android:id="@+id/search_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            />>
        <ImageView
            android:id="@+id/search_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search"
            />>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.lessask.recyclerview.RecyclerViewStatusSupport
            android:id="@+id/lessons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6"
            android:scrollbars="none"
            android:gravity="center"
            />

        <RelativeLayout
            android:id="@+id/empty_view"
            android:background="@color/background_white_not_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="赶紧创建你的专属课程吧！"
                />
            <Button
                android:id="@+id/add"
                android:layout_below="@id/empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="创建"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loading_view"
            android:background="@color/background_white_not_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="loading"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/error_view"
            android:background="@color/background_white_not_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="error"
                />
            <Button
                android:id="@+id/refresh"
                android:layout_below="@id/error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="刷新"
                />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
