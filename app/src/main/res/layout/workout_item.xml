<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/background_white_not_transparent"
    android:id="@+id/lesson_item"
    >
    <ImageView
        android:id="@+id/cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/man"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cover"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="30天无敌减脂"
        />
    <LinearLayout
        android:id="@+id/info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cover"
        android:layout_alignLeft="@id/name"
        android:layout_marginTop="6dp"
        >
        <ImageView
            android:id="@+id/purpose_label"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/purpose"
            />
        <TextView
            android:id="@+id/purpose"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="减脂"
            />
        <ImageView
            android:id="@+id/bodies_label"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bodies"
            />
        <TextView
            android:id="@+id/bodies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="臀部 大腿"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/info2"
        android:layout_alignLeft="@id/name"
        >
        <ImageView
            android:id="@+id/time_label"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/time_grey"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="30分钟"
            />
        <ImageView
            android:id="@+id/address_label"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/address"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="家里"
            />

    </LinearLayout>
</RelativeLayout>
