<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android_custom="http://schemas.android.com/apk/res-auto"
                android:background="@color/background_white_not_transparent">
    <TextView
        android:id="@+id/today_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="今日训练"
        />
    <LinearLayout
        android:id="@+id/today_lesson"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_below="@id/today_workout"
        android:layout_marginTop="16dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white_bg_border"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/lesson_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/women"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/lesson_image"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/finished"
                />
            <TextView
                android:id="@+id/lesson_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/lesson_image"
                android:layout_toRightOf="@id/lesson_image"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:textColor="@color/black_40"
                android:text="高阶臀部塑形"
                />

            <LinearLayout
                android:id="@+id/muscle_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignBottom="@id/lesson_image"
                android:layout_alignLeft="@id/lesson_name"
                >
                <TextView
                    android:id="@+id/muscle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/black_40"
                    android:text="增肌"
                    />
                <com.lessask.custom.RatingBar
                    android:id="@+id/muscle_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:rating="1"
                    android:isIndicator="false"
                    custom:starCount="5"
                    custom:clickable="false"
                    custom:starEmpty="@drawable/unstar"
                    custom:starFill="@drawable/star"
                    custom:starImageSize="14dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fat_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_above="@id/muscle_layout"
                android:layout_marginBottom="6dp"
                android:layout_alignLeft="@id/lesson_name"
                >
                <TextView
                    android:id="@+id/fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/black_40"
                    android:text="减脂"
                    />

                <com.lessask.custom.RatingBar
                    android:id="@+id/fat_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:rating="1"
                    android:isIndicator="true"
                    custom:starCount="5"
                    custom:clickable="false"
                    custom:starEmpty="@drawable/unstar"
                    custom:starFill="@drawable/star"
                    custom:starImageSize="14dp"
                    />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white_bg_border"/>

    </LinearLayout>

