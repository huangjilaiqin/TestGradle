<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_white_not_transparent">
    <TextView
        android:id="@+id/today_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="今日训练"
        />
    <RelativeLayout
        android:id="@+id/personal_info"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/today_workout"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.lessask.custom.RoundProgressBar
            android:id="@+id/personal_circle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android_custom:roundColor="@color/white_bg_border"
            android_custom:roundProgressColor="@color/personal_progress"
            android_custom:textIsDisplayable="false"
            android_custom:roundWidth="4dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="第"
                />
            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black_40"
                android:textSize="16sp"
                android:text="15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="天"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/join_info"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personal_info"
        android:layout_marginTop="16dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        >
        <com.lessask.custom.RoundProgressBar
            android:id="@+id/join_circle"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android_custom:roundColor="@color/white_bg_border"
            android_custom:roundProgressColor="@color/today_join"
            android_custom:textIsDisplayable="false"
            android_custom:roundWidth="8dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black_40"
                android:textSize="27sp"
                android:text="65"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/join"
                android:layout_alignBottom="@id/join"
                android:text="%"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/join"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="11sp"
                android:text="已完成"
                />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>