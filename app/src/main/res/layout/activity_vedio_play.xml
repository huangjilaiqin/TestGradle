
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/preview_video_parent"
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >

        <TextureView
            android:id="@+id/preview_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/preview_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_play_big"
            android:layout_centerInParent="true"
            android:scaleType="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recorder_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/preview_video_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="动作名字"
            android:layout_centerInParent="true"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_label"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@id/name_label"
            />
        <TextView
            android:id="@+id/tag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="标签"
            android:layout_alignLeft="@id/name_label"
            android:layout_marginTop="20dp"
            android:layout_below="@id/name_label"
            />
        <GridView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></GridView>
        <ImageView
            android:id="@+id/edit_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag"
            android:layout_alignLeft="@id/name"
            android:layout_alignBottom="@id/tag_label"
            />
        <TextView
            android:id="@+id/notice_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tag_label"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tag_label"
            android:textSize="18sp"
            android:text="注意事项"
            />
        <ImageView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/items"
            android:layout_alignLeft="@id/name"
            android:layout_alignBottom="@id/notice_label"
            />
        <ImageView
            android:id="@+id/upload"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@id/notice_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/upload"
            />


    </RelativeLayout>


</RelativeLayout>