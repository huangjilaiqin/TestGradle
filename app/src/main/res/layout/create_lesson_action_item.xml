<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >
    <ImageView
        android:id="@+id/vedio"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="20dp"
        android:src="@drawable/video"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/vedio"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@id/vedio"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="深蹲"
        />

    <TextView
        android:id="@+id/cost_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vedio"
        android:layout_alignLeft="@id/name"
        android:text="60"
        />
    <TextView
        android:id="@+id/time_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cost_time"
        android:layout_toRightOf="@id/cost_time"
        android:text=" 秒"
        />
    <TextView
        android:id="@+id/times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_marginBottom="8dp"
        android:layout_above="@id/cost_time"
        android:text="100"
        />
    <TextView
        android:id="@+id/times_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/times"
        android:layout_toRightOf="@id/times"
        android:text=" 次  X  "
        />
    <TextView
        android:id="@+id/groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/times"
        android:layout_toRightOf="@id/times_label"
        android:text="3"
        />
    <TextView
        android:id="@+id/groups_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/times"
        android:layout_toRightOf="@id/groups"
        android:text=" 组"
        />
</RelativeLayout>
