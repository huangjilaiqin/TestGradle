<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/root"
              tools:context="lessask.ChatActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_collapseMode="pin"
        android:background="@color/main_color"
        />
    <com.lessask.recyclerview.ImprovedSwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:isl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        isl:scrollableChildId="@+id/list"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.lessask.recyclerview.RecyclerViewStatusSupport
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:focusable="false"
                android:scrollbars="none"
                android:gravity="center"
                />
            <RelativeLayout
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_white_not_transparent"
                >
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/loading_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_white_not_transparent"
                >
                <TextView
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="loading"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/error_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_white_not_transparent"
                >
                <TextView
                    android:id="@+id/error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="error"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/error_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="下拉重新请求"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </com.lessask.recyclerview.ImprovedSwipeLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/borde_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/content_type"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="4dp"
            android:layout_gravity="bottom"
            android:src="@drawable/tn"/>
        <EditText
            android:id="@+id/content"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:paddingLeft="4dp"
            android:textSize="18sp"
            android:textColor="@color/black_40"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@id/content_type"
            />
        <RelativeLayout
            android:id="@+id/right_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:id="@+id/more"
                android:layout_width="52dp"
                android:layout_height="48dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="16dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/aw1"/>
            <Button
                android:id="@+id/send"
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_main_color_bg"
                android:textColor="@color/white"
                android:text="发送"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
